@model IEnumerable<EntregasFuncionalidades.Models.VAGA>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h2>
            Lista de Vagas
            <a class="btn btn-success" href="Criar">Novo</a>
        </h2>
    </div>
    <div class="col-md-6">
        <h3 class="h3right">
            Total de Vagas: @ViewBag.qtdVagas
        </h3>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Código da Vaga</th>
            <th>Descrição</th>
            <th>Atribuição</th>
            <th>Salário</th>
            <th>Requesito</th>
            <th>Data de Cadastro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="numbers">
                <td>@item.VAIID</td>
                <td>@item.VAIDESCRICAO</td>
                <td>@item.VAIATRIBUICAO</td>
                <td>@item.VAISALARIO</td>
                <td>@item.VAIREQUISITO</td>
                <td>@item.VAIDATACADASTRO</td>
                <td><a class="btn btn-info" href="Exibir?id=@item.VAIID">Exibir</a></td>
                <td><a class="btn btn-warning" href="Editar?id=@item.VAIID">Editar</a></td>
                <td><a class="btn btn-danger" href="Apagar?id=@item.VAIID">Apagar</a></td>
            </tr>
        }
    </tbody>
</table>

