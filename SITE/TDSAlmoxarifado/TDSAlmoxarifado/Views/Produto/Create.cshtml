
@{
    ViewBag.Title = "Create";
}

<h2>Cadastro de Produtos</h2>

<div>
    <form action="/Produto/Create" method="post">
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text"
                   class="form-control"
                   maxlength="100"
                   id="descricao"
                   name="descricao"
                   required />
        </div>
        <div class="form-group">
            <label for="minimo">Mínimo</label>
            <input type="number"
                   class="form-control"
                   id="minimo"
                   value="0"
                   min="0"
                   name="minimo"
                   required />
        </div>
        <div class="form-group">
            <label for="maximo">Máximo</label>
            <input type="number"
                   class="form-control"
                   id="maximo"
                   value="0"
                   min="0"
                   name="maximo"
                   required />
        </div>
        <div class="form-group">
            <label for="estoque">Estoque Atual</label>
            <input type="number"
                   class="form-control"
                   id="estoque"
                   value="0"
                   min="0"
                   name="estoque"
                   required />
        </div>
        <a href="/Produto/Index"><button type="button" class="btn btn-primary">Voltar</button></a> 
        <button type="submit" class="btn btn-success">Salvar</button>
    </form>
</div>

