@model TDSAlmoxarifado.Models.AREA
@{
    ViewBag.Title = "Edit";
}

<h2>Editando Área</h2>

<div>
    <form action="/Area/Edit?id=@Model.AREID" method="post">
        <label>Descrição: </label>
        <input type="text" id="descricao" name="descricao" 
         value="@Model.AREDESCRICAO" required />
        <br />
        <br />
        <a href="/Area/Index" class="btn btn-primary">Voltar</a>
        <button type="submit" class="btn btn-success">Salvar</button>
    </form>
</div>

