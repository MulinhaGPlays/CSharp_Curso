@model TDSAlmoxarifado.Models.PRODUTO
@{
    ViewBag.Title = "Delete";
}

<h2>Deletar Produto</h2>

<div>
    <form action="/Produto/DeleteConfirma?id=@Model.PROID" method="post">

        <div class="form-group">
            <label>Descrição</label>
            <label>@Model.PRODESCRICAO</label>
        </div>

        <div class="form-group">
            <label>Mínimo</label>
            <label>@Model.PROMINIMO</label>
        </div>

        <div class="form-group">
            <label>Máximo</label>
            <label>@Model.PROMAXIMO</label>

        </div>

        <div class="form-group">
            <label>Estoque Atual</label>
            <label>@Model.PROESTOQUE</label>
        </div>

        <div>
            <a href="/Produto/Index"> <button type="button" class="btn btn-info">Voltar</button></a>
            <button type="submit" class="btn btn-danger">Excluir</button>
        </div>
    </form>
</div>

